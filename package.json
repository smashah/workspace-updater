{
  "name": "workspace-updater",
  "version": "1.0.2",
  "description": "A utility to check for outdated dependencies in a pnpm workspace catalog.",
  "main": "src/index.ts",
  "bin": {
    "workspace-updater": "./bin/wu"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "build-compile": "bun build ./src/index.ts --compile --outfile ./bin/wu",
    "build-node": "bun build ./src/index.ts --outdir ./dist --target node --format cjs"
  },
  "dependencies": {
    "@types/semver": "^7.5.8",
    "js-yaml": "^4.1.0",
    "semver": "^7.6.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
